<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/first_screen">

    <TextView
        android:layout_marginTop="133dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvmFood"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/hel_thin"
        android:textSize="50sp"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tvMakeFood"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvmFood"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/light_hel"
        android:text="@string/make_food_by_yourself"
        android:textColor="#545A1B"
        android:textSize="25sp"
        android:textStyle="italic" />
    <Button
        android:id="@+id/buttonStarted"
        android:paddingEnd="40dp"
        android:paddingStart="40dp"
        android:paddingTop="10dp"
        android:paddingBottom="25dp"
        android:background="@drawable/custome_button"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:fontFamily="@font/hel_bold"
        android:text="@string/get_started"
        android:textSize="26sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="110dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvMakeFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>